{% block content %}
<div id="pokesearch">
<form action="{{url_for('pokemon')}}" method="POST">
        {{form.hidden_tag()}}
        <div class="mb-3">
            {{form.pokemon_name.label(class="form-label")}}
            {{form.pokemon_name(class="form-control", style= "width:30%;")}}
            {% for error in form.pokemon_name.errors%}
                <p>{{error}}</p>
            {% endfor %}
        </div>
        <div>
          {{form.submit(class="btn btn-primary")}}<br>
          <p>{{error}}</p>
        </div>
      </form>

