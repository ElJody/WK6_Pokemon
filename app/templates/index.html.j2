{% block css %}
    <link rel="stylesheet" href="main.css">
{% endblock %}

{% block title %}
    Home
{% endblock %}

{% block content %}
<h1>!!!!! POKEMON !!!!!</h1>
<h5>Gotta Catch'em All!</h5>
<form action="/pokemon" method="GET">
  <div class="mb-1">
    <label for="name" class="form-label">Select A Pokemon</label>
    <input type="text" name = "name" class="form-control" id="name">
  </div>
  <button type="search" class="btn btn-primary">Search</button>

{% if pokes %}
  <h5>{pokes.name}</h5>
{% endif %}

{% if not pokes %}
  <h5>{pokes.name}</h5>
{% endif %}


</form>    
{% endblock %}